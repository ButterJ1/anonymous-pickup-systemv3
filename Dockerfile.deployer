# Dockerfile.deployer
FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy deployment files
COPY contracts/ ./contracts/
COPY scripts/ ./scripts/
COPY circuits/ ./circuits/
COPY hardhat.config.js ./

# Wait for blockchain and deploy
CMD ["sh", "-c", "sleep 10 && npm run deploy-contracts"]